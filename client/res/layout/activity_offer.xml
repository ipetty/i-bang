<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_bg_color"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OfferActivity" >

 	 	<include
        android:id="@+id/include"
        layout="@layout/action_bar_simple_back" />

 	 	<ScrollView
 	 	    android:id="@+id/scrollView1"
 	 	    android:layout_width="match_parent"
 	 	    android:layout_height="wrap_content" >

 	 	    <LinearLayout
 	 	        android:layout_width="match_parent"
 	 	        android:layout_height="match_parent"
 	 	        android:orientation="vertical" >

 	 	        <ImageSwitcher
 	 	            android:id="@+id/imageSwitcher"
 	 	            android:layout_width="fill_parent"
 	 	            android:layout_height="200dp"
 	 	            android:background="@color/white_color"
 	 	            android:visibility="gone" >
 	 	        </ImageSwitcher>
 	 	        
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="horizontal"
	android:paddingTop="8dp" 
	android:paddingLeft="8dp"
	android:paddingRight="8dp"
    android:background="@drawable/list_color_item_bg_white" >

			    <ImageView
			        android:id="@+id/avatar"
			        android:layout_width="40dp"
			        android:layout_height="40dp"
			        android:layout_marginRight="11.0dip"
			        android:layout_alignParentBottom="true"
			        android:layout_alignParentLeft="true"
			        android:scaleType="fitXY"
			        android:src="@drawable/default_avatar" />

			    <TextView
			        android:id="@+id/nickname"
			        android:layout_width="wrap_content"
			        android:layout_height="32dp"
			        android:layout_toRightOf="@+id/avatar"
			        android:ellipsize="end"
			        android:gravity="left|center"
			        android:singleLine="true"
			        android:text="张三"
			        android:textColor="@color/base_color"
			        android:textSize="20dp" />
<TextView
				        android:id="@+id/created_at"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_alignParentRight="true"
				        android:layout_centerVertical="true"
				        android:gravity="center"
				        android:textSize="12sp" 
				        android:textColor="@color/gray_color"
				        android:text="2分钟前"/>
	</RelativeLayout>
 	 	        <RelativeLayout
 	 	            android:layout_width="match_parent"
 	 	            android:layout_height="wrap_content"
 	 	            android:background="@color/white_color"
 	 	            android:padding="8dp" >

 	 	            <TextView
 	 	                android:id="@+id/content"
 	 	                android:layout_width="wrap_content"
 	 	                android:layout_height="wrap_content"
 	 	                android:layout_alignParentLeft="true"
 	 	                android:layout_alignParentTop="true"
 	 	                android:text="我测试是"
 	 	                android:color="@color/black_color" 
 	 	                android:textSize="16dp" />

 	 	            <TextView
 	 	                android:id="@+id/textView"
 	 	                android:layout_width="wrap_content"
 	 	                android:layout_height="wrap_content"
 	 	                android:layout_alignLeft="@+id/content"
 	 	                android:layout_marginTop="8dp"
 	 	                 android:layout_below="@+id/content"
 	 	                android:text="截止日期"
 	 	                android:textSize="14dp"
 	 	                android:textColor="@color/gray_color" />

 	 	            <TextView
 	 	                android:id="@+id/closedOn"
 	 	                android:layout_width="wrap_content"
 	 	                android:layout_height="wrap_content"
 	 	                android:layout_alignBaseline="@+id/textView"
 	 	                android:layout_alignBottom="@+id/textView"
 	 	                android:layout_toRightOf="@+id/textView"
 	 	                android:text="2014-12-12"
 	 	                android:textSize="14dp"
 	 	                android:textColor="@color/gray_color" />

 	 	        </RelativeLayout>
 	 	        
 	 	        <LinearLayout
 	 	             android:layout_width="match_parent"
 	 	             android:layout_height="wrap_content"
 	 	             android:orientation="vertical"
 	 	             android:id="@+id/contact_layout">

 	 	             <include layout="@layout/line_horizontal_divider" />

 	 	             <LinearLayout
 	 	                 android:layout_width="fill_parent"
 	 	                 android:layout_height="46dp"
 	 	                 android:background="@drawable/list_color_item_bg_white"
 	 	                 android:gravity="center_vertical" >

 	 	                 <TextView
 	 	                     android:layout_width="wrap_content"
 	 	                     android:layout_height="wrap_content"
 	 	                     android:layout_marginLeft="16dp"
 	 	                     android:text="手机"
 	 	                     android:textColor="@color/black_color"
 	 	                     android:textSize="16sp" />

 	 	                 <TextView
 	 	                     android:id="@+id/phone"
 	 	                     android:layout_width="0.0dip"
 	 	                     android:layout_height="wrap_content"
 	 	                     android:layout_marginLeft="16dp"
 	 	                     android:layout_marginRight="16dp"
 	 	                     android:layout_weight="1.0"
 	 	                     android:background="@null"
 	 	                     android:focusable="false"
 	 	                     android:gravity="right|center_vertical"
 	 	                     android:text="13913440000"
 	 	    	              android:singleLine="true"
 	 	                     android:textColor="@color/gray_color"
 	 	                     android:textColorHint="@color/gray_color"
 	 	                     android:textSize="16sp"
 	 	                     android:windowSoftInputMode="stateHidden" />
 	 	             </LinearLayout>

 	 	      
 	 	         </LinearLayout>
 	 	        <include layout="@layout/line_horizontal_divider" />
 	 	         <include layout="@layout/line_space" />

 	 	         <LinearLayout
 	 	             android:layout_width="match_parent"
 	 	             android:layout_height="wrap_content"
 	 	             android:orientation="vertical"
 	 	             android:id="@+id/contact"
 	 	             android:visibility="gone" >

 	 	             <include layout="@layout/line_horizontal_divider" />

 	 	             <LinearLayout
 	 	                 android:layout_width="fill_parent"
 	 	                 android:layout_height="46dp"
 	 	                 android:background="@drawable/list_color_item_bg_white"
 	 	                 android:gravity="center_vertical" >

 	 	                 <TextView
 	 	                     android:layout_width="wrap_content"
 	 	                     android:layout_height="wrap_content"
 	 	                     android:layout_marginLeft="16dp"
 	 	                     android:text="姓名"
 	 	                     android:textColor="@color/black_color"
 	 	                     android:textSize="16sp" />

 	 	                 <TextView
 	 	                     android:id="@+id/nickname"
 	 	                     android:layout_width="0.0dip"
 	 	                     android:layout_height="wrap_content"
 	 	                     android:layout_marginLeft="16dp"
 	 	                     android:layout_marginRight="16dp"
 	 	                     android:layout_weight="1.0"
 	 	                     android:background="@null"
 	 	                     android:focusable="false"
 	 	                     android:gravity="right|center_vertical"
 	 	                     android:hint="请输入姓名"
 	 	                     android:singleLine="true"
 	 	                     android:textColor="@color/gray_color"
 	 	                     android:textColorHint="@color/gray_color"
 	 	                     android:textSize="16sp"
 	 	                     android:windowSoftInputMode="stateHidden" />
 	 	             </LinearLayout>

 	 	             <include layout="@layout/line_horizontal_divider" />

 	 	             <LinearLayout
 	 	                 android:layout_width="fill_parent"
 	 	                 android:layout_height="46dp"
 	 	                 android:background="@drawable/list_color_item_bg_white"
 	 	                 android:gravity="center_vertical" >

 	 	                 <TextView
 	 	                     android:layout_width="wrap_content"
 	 	                     android:layout_height="wrap_content"
 	 	                     android:layout_marginLeft="16dp"
 	 	                     android:text="手机"
 	 	                     android:textColor="@color/black_color"
 	 	                     android:textSize="16sp" />

 	 	                 <TextView
 	 	                     android:id="@+id/phone"
 	 	                     android:layout_width="0.0dip"
 	 	                     android:layout_height="wrap_content"
 	 	                     android:layout_marginLeft="16dp"
 	 	                     android:layout_marginRight="16dp"
 	 	                     android:layout_weight="1.0"
 	 	                     android:background="@null"
 	 	                     android:focusable="false"
 	 	                     android:gravity="right|center_vertical"
 	 	                     android:hint="请输入手机"
 	 	                     android:singleLine="true"
 	 	                     android:textColor="@color/gray_color"
 	 	                     android:textColorHint="@color/gray_color"
 	 	                     android:textSize="16sp"
 	 	                     android:windowSoftInputMode="stateHidden" />
 	 	             </LinearLayout>

 	 	             <include layout="@layout/line_horizontal_divider" />
					<include layout="@layout/line_space" />
 	 	         </LinearLayout>

 	 	         <LinearLayout
 	 	             android:id="@+id/offer_layout"
 	 	             android:layout_width="match_parent"
 	 	             android:layout_height="wrap_content"
 	 	             android:orientation="vertical" >
					<include layout="@layout/line_horizontal_divider"/>
 	 	             <LinearLayout
 	 	                 android:layout_width="fill_parent"
 	 	                 android:layout_height="wrap_content"
 	 	                 android:orientation="horizontal"
 	 	                 android:paddingBottom="13.0dip"
 	 	                 android:paddingLeft="10.0dip"
 	 	                 android:paddingRight="14.0dip"
 	 	                 android:background="@color/white_color"
 	 	                 android:paddingTop="13dp" >

 	 	                 <ImageView
 	 	                     android:id="@+id/offer_avatar"
 	 	                     android:layout_width="40.0dip"
 	 	                     android:layout_height="40.0dip"
 	 	                     android:layout_marginRight="11.0dip"
 	 	                     android:scaleType="centerCrop"
 	 	                     android:src="@drawable/default_avatar" />

 	 	                 <LinearLayout
 	 	                     android:layout_width="fill_parent"
 	 	                     android:layout_height="wrap_content"
 	 	                     android:orientation="vertical" >

 	 	                     <RelativeLayout
 	 	                         android:layout_width="match_parent"
 	 	                         android:layout_height="wrap_content"
 	 	                         android:gravity="center" >

 	 	                         <TextView
 	 	                             android:id="@+id/offer_nickname"
 	 	                             android:layout_width="wrap_content"
 	 	                             android:layout_height="wrap_content"
 	 	                             android:layout_alignParentLeft="true"
 	 	                             android:layout_centerVertical="true"
 	 	                             android:ellipsize="end"
 	 	                             android:singleLine="true"
 	 	                             android:text="张先生"
 	 	                             android:textColor="@color/base_color"
 	 	                             android:textSize="16sp"
 	 	                             android:textStyle="bold" />

 	 	                         <TextView
 	 	                             android:id="@+id/offer_created_at"
 	 	                             android:layout_width="wrap_content"
 	 	                             android:layout_height="wrap_content"
 	 	                             android:layout_alignParentRight="true"
 	 	                             android:layout_centerVertical="true"
 	 	                             android:gravity="center"
 	 	                             android:text="2分钟前"
 	 	                             android:textColor="@color/gray_color"
 	 	                             android:textSize="12sp" />
 	 	                     </RelativeLayout>

 	 	                     <TextView
 	 	                         android:id="@+id/offer_content"
 	 	                         android:layout_width="fill_parent"
 	 	                         android:layout_height="wrap_content"
 	 	                         android:layout_marginTop="6.0dip"
 	 	                         android:text="我可以提供给您需要的帮助提"
 	 	                         android:textColor="@android:color/black"
 	 	                         android:textSize="14sp" />

 	 	                     <RelativeLayout
 	 	                         android:layout_width="match_parent"
 	 	                         android:layout_height="wrap_content" >

 	 	                         <TextView
 	 	                             android:id="@+id/offer_totalPoint"
 	 	                             android:layout_width="wrap_content"
 	 	                             android:layout_height="wrap_content"
 	 	                             android:layout_alignParentLeft="true"
 	 	                             android:text="积分1000"
 	 	                             android:textSize="12sp" />
 	 	                     </RelativeLayout>
 	 	                 </LinearLayout>
 	 	             </LinearLayout>
 	 	             <LinearLayout
 	 	             android:layout_width="match_parent"
 	 	             android:layout_height="wrap_content"
 	 	             android:orientation="vertical"
 	 	             android:id="@+id/offer_contact_layout">

 	 	             <include layout="@layout/line_horizontal_divider" />

 	 	             <LinearLayout
 	 	                 android:layout_width="fill_parent"
 	 	                 android:layout_height="46dp"
 	 	                 android:background="@drawable/list_color_item_bg_white"
 	 	                 android:gravity="center_vertical" >

 	 	                 <TextView
 	 	                     android:layout_width="wrap_content"
 	 	                     android:layout_height="wrap_content"
 	 	                     android:layout_marginLeft="16dp"
 	 	                     android:text="手机"
 	 	                     android:textColor="@color/black_color"
 	 	                     android:textSize="16sp" />

 	 	                 <TextView
 	 	                     android:id="@+id/offer_phone"
 	 	                     android:layout_width="0.0dip"
 	 	                     android:layout_height="wrap_content"
 	 	                     android:layout_marginLeft="16dp"
 	 	                     android:layout_marginRight="16dp"
 	 	                     android:layout_weight="1.0"
 	 	                     android:background="@null"
 	 	                     android:focusable="false"
 	 	                     android:gravity="right|center_vertical"
 	 	                     android:text="13913440000"
 	 	    	              android:singleLine="true"
 	 	                     android:textColor="@color/gray_color"
 	 	                     android:textColorHint="@color/gray_color"
 	 	                     android:textSize="16sp"
 	 	                     android:windowSoftInputMode="stateHidden" />
 	 	             </LinearLayout>

 	 	      
 	 	         </LinearLayout>
				<include layout="@layout/line_horizontal_divider"/>
				<include layout="@layout/line_space"/>
 	 	         </LinearLayout>
 	 	         
 	 	        <LinearLayout
 	 	             android:id="@+id/delegation_layout"
 	 	             android:layout_width="match_parent"
 	 	             android:layout_height="match_parent"
 	 	             android:orientation="vertical" >
									<TextView
				        android:id="@+id/delegation"
				        android:layout_width="match_parent"
				        android:layout_height="46dp"
				        android:layout_marginLeft="24dp"
				        android:layout_marginRight="24dp"
				        android:gravity="center"
				        android:layout_below="@+id/login_linearLayout"
				        android:background="@drawable/button_orange_shape"
				        android:textColor="@color/white_color"
				        android:textSize="24sp"
				        android:text="接受帮助" />
 	 	         </LinearLayout>
 	 	         
 	 	        <LinearLayout
 	 	             android:id="@+id/offer_close_layout"
 	 	             android:layout_width="match_parent"
 	 	             android:layout_height="match_parent"
 	 	             android:orientation="vertical" >
									<TextView
				        android:id="@+id/offer_close"
				        android:layout_width="match_parent"
				        android:layout_height="46dp"
				        android:layout_marginLeft="24dp"
				        android:layout_marginRight="24dp"
				        android:gravity="center"
				        android:layout_below="@+id/login_linearLayout"
				        android:background="@drawable/button_orange_shape"
				        android:textColor="@color/white_color"
				        android:textSize="24sp"
				        android:text="关闭帮助" />
 	 	         </LinearLayout>
 	 	    </LinearLayout>
 	 	</ScrollView>

</LinearLayout>
