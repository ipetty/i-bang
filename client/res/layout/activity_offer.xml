<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OfferActivity" >

 	 	<include
        android:id="@+id/include"
        layout="@layout/action_bar_simple_back" />
<LinearLayout
 	 	            android:layout_width="match_parent"
 	 	            android:layout_height="120dp"
 	 	            android:background="@color/white_color"
 	 	            android:padding="8dp" >

 	 	            <EditText
 	 	                android:id="@+id/content"
 	 	                android:layout_width="0dp"
 	 	                android:layout_height="match_parent"
 	 	                android:layout_weight="1"
 	 	                android:background="@null"
 	 	                android:ems="10"
 	 	                android:gravity="center_vertical|top"
 	 	                android:hint="请输入您的应征条件特长等等"
 	 	                android:inputType="textMultiLine"
 	 	                android:scrollbarStyle="insideInset"
 	 	                android:scrollbars="vertical"
 	 	                android:textColor="@color/gray_color"
 	 	                android:textSize="16sp" >

 	 	                <requestFocus />
 	 	            </EditText>
</LinearLayout><include layout="@layout/line_horizontal_divider" />

<TextView
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:layout_below="@+id/login_linearLayout"
        android:background="@drawable/button_orange_shape"
        android:textColor="@color/white_color"
        android:textSize="24sp"
        android:text="我要应征" />
</LinearLayout>
