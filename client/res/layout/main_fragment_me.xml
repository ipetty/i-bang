<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/main_fragment_me">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/action_bar_bg"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp" >
		   <ImageView 
		             android:id="@+id/action_bar_left_image" 
		             android:src="@drawable/action_bar_back"
		           	 style="@style/ActionBarButton"
		           	 android:visibility="invisible"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      android:layout_weight="1.0"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/me"
                    android:textColor="@color/base_color"
                    android:textSize="22sp" />
	            <ImageView 
	             android:id="@+id/action_bar_right_image" 
	             android:src="@drawable/action_bar_set"
	           	 style="@style/ActionBarButton"/>
            
            
            </LinearLayout>

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/line_horizontal_divider" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_unlogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            >
		
            <include layout="@layout/common_unlogin" />
        </FrameLayout>

         <FrameLayout
            android:id="@+id/fragment_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

             <ScrollView
                 android:id="@+id/scrollView"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent" 
                 android:background="@color/yellow_bg_color"
                 >

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:background="@color/yellow_bg_color"
                     android:orientation="vertical" >
  

             <include layout="@layout/line_space" />

             <include layout="@layout/line_horizontal_divider" />

<RelativeLayout
    android:id="@+id/user_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_color_item_bg_white"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="10dp" >

		     <ImageView
			         android:id="@+id/avatar"
			         android:layout_width="52dp"
			         android:layout_height="52dp"
			          android:layout_marginLeft="10dp"
			         android:layout_centerVertical="true"
			         android:src="@drawable/default_avatar" />
		     
			
			    
			     <ImageView
			        android:id="@+id/into"
			        android:layout_centerVertical="true"
			        android:layout_width="wrap_content"
			        android:layout_height="32dp"
			         android:layout_marginRight="8dp" 
			        android:layout_alignParentRight="true"
			        android:src="@drawable/ic_forward" />

			     <RelativeLayout
			         android:layout_width="wrap_content"
			         android:layout_height="52dp"
			         android:layout_marginLeft="8dp"
			         android:layout_alignTop="@+id/avatar"
			         android:layout_toLeftOf="@+id/into"
			         android:layout_toRightOf="@+id/avatar" >



			         <TextView
			             android:id="@+id/nickname"
			             android:layout_width="wrap_content"
			             android:layout_height="28dp"
			             android:layout_alignParentLeft="true"
			             android:layout_alignParentTop="true"
			             android:ellipsize="end"
			             android:gravity="left|center"
			             android:singleLine="true"
			             android:textColor="@color/black_color"
			             android:textSize="18dp" />
			         
			         			         <TextView
			             android:id="@+id/signature"
			             android:layout_width="wrap_content"
			             android:layout_height="24dp"
			             android:layout_alignParentBottom="true"
			             android:layout_alignParentLeft="true"
			             android:ellipsize="end"
			             android:gravity="left|center"
			             android:singleLine="true"
			             android:textColor="@color/gray_color"
			             android:textSize="14dp" />
			     </RelativeLayout>

	</RelativeLayout>
 	 	  
               <include layout="@layout/line_horizontal_divider" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="48dp" >

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_weight="1"
                       android:background="@drawable/list_color_item_bg_white"
                       android:orientation="vertical" >
 					<TextView
                           android:id="@+id/seekCount"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="16dp"
                           android:text="0" />
 
                       <TextView
                        
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/gray_color"
                           android:textSize="14dp"
                           android:text="求助" />

                      

                   </LinearLayout>
                   
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_weight="1"
                       android:background="@drawable/list_color_item_bg_white"
                       android:orientation="vertical" >
 					<TextView
                           android:id="@+id/offerCount"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="16dp"
                           android:text="0" />
                       <TextView
                    
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/gray_color"
                           android:textSize="14dp"
                           android:text="帮助" />
 					 </LinearLayout>
                                          <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_weight="1"
                       android:background="@drawable/list_color_item_bg_white"
                       android:orientation="vertical" >
 					<TextView
                           android:id="@+id/seekerTotalPoint"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="16dp"
                           android:text="0" />
 
                       <TextView
                        
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                               android:textColor="@color/gray_color"
                           android:textSize="14dp"
                           android:text="积分" />

                   </LinearLayout>

               </LinearLayout>
 				<include layout="@layout/line_horizontal_divider" />
 				<include layout="@layout/line_space" />
 				<include layout="@layout/line_horizontal_divider" />
			<RelativeLayout
	android:id="@+id/seek_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="10dp"
    android:background="@drawable/list_color_item_bg_white" >


			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="32dp"
			        android:layout_centerVertical="true"
			        android:layout_marginLeft="10dp"
			        android:ellipsize="end"
			        android:gravity="left|center"
			        android:singleLine="true"
			        android:textColor="@color/gray_color"
			        android:textSize="16dp" 
			        android:text="我的求助"/>
			    
			     <ImageView
			        android:id="@+id/into"
			        android:layout_centerVertical="true"
			        android:layout_width="wrap_content"
			        android:layout_height="32dp"
			         android:layout_marginRight="8dp" 
			        android:layout_alignParentRight="true"
			        android:src="@drawable/ic_forward" />

	</RelativeLayout>
 				<include layout="@layout/line_horizontal_divider" />
 				<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="10dp"
    android:id="@+id/delegation_layout"
    android:background="@drawable/list_color_item_bg_white" >


			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="32dp"
			        android:layout_centerVertical="true"
			        android:layout_marginLeft="10dp"
			        android:ellipsize="end"
			        android:gravity="left|center"
			        android:singleLine="true"
			        android:textColor="@color/gray_color"
			        android:textSize="16dp" 
			        android:text="我的帮助"/>
			    
			     <ImageView
			        android:id="@+id/into"
			        android:layout_centerVertical="true"
			        android:layout_width="wrap_content"
			        android:layout_height="32dp"
			         android:layout_marginRight="8dp" 
			        android:layout_alignParentRight="true"
			        android:src="@drawable/ic_forward" />

	</RelativeLayout>
			
	<include layout="@layout/line_horizontal_divider" />
 				<include layout="@layout/line_horizontal_divider" />
 			
               </LinearLayout>
             </ScrollView>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
