<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MyDelegationActivity" >

  	 	<include
        android:id="@+id/include"
        layout="@layout/action_bar_simple_back" />
<LinearLayout
 	 	    android:layout_width="match_parent"
 	 	    android:layout_height="42dp" >
 	 	    <TextView
 	 	        android:id="@+id/textView1"
 	 	        android:layout_width="match_parent"
 	 	        android:layout_height="match_parent"
 	 	        android:layout_gravity="center"
 	 	        android:gravity="center"
 	 	        android:background="@drawable/list_color_item_bg_white"
 	 	        android:layout_weight="1"
 	 	        android:text="应征中" />
<include layout="@layout/line_vertical_divider"/>
 	 	    <TextView
 	 	        android:id="@+id/textView1"
 	 	        android:layout_width="match_parent"
 	 	        android:layout_height="match_parent"
 	 	        android:layout_gravity="center"
 	 	        android:gravity="center"
 	 	        android:background="@drawable/list_color_item_bg_white"
 	 	        android:layout_weight="1"
 	 	        android:text="委托中" />
<include layout="@layout/line_vertical_divider"/>
 	 	    <TextView
 	 	        android:id="@+id/textView1"
 	 	        android:layout_width="match_parent"
 	 	        android:layout_height="match_parent"
 	 	        android:layout_gravity="center"
 	 	        android:gravity="center"
 	 	        android:background="@drawable/list_color_item_bg_white"
 	 	        android:layout_weight="1"
 	 	        android:text="已完成" />

 	 	    <include
 	 	        android:layout_weight="1"
 	 	        layout="@layout/line_vertical_divider" />

 	 	    <TextView
 	 	        android:id="@+id/textView1"
 	 	        android:layout_width="match_parent"
 	 	        android:layout_height="match_parent"
 	 	        android:layout_weight="1"
 	 	        android:background="@drawable/list_color_item_bg_white"
 	 	        android:gravity="center"
 	 	        android:text="已关闭" />

 	 	    </LinearLayout>
 	 	    <include layout="@layout/line_horizontal_divider"/>

       <ListView
           android:id="@+id/listView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" >
       </ListView>
</LinearLayout>
