<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_bg_color"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PublishActivity" >

 	 	<include
        android:id="@+id/include"
        layout="@layout/action_bar_simple_back" />

 	 	<ScrollView
 	 	    android:id="@+id/scrollView1"
 	 	    android:layout_width="match_parent"
 	 	    android:layout_height="wrap_content" >

 	 	    <LinearLayout
 	 	        android:layout_width="match_parent"
 	 	        android:layout_height="match_parent"
 	 	        android:orientation="vertical" >

 	 	        <LinearLayout
 	 	            android:layout_width="match_parent"
 	 	            android:layout_height="120dp"
 	 	            android:background="@color/white_color"
 	 	            android:padding="8dp" >

 	 	            <EditText
 	 	                android:id="@+id/content"
 	 	                android:layout_width="0dp"
 	 	                android:layout_height="match_parent"
 	 	                android:layout_weight="1"
 	 	                android:background="@null"
 	 	                android:ems="10"
 	 	                android:gravity="center_vertical|top"
 	 	                android:hint="请输入需要帮助的内容"
 	 	                android:inputType="textMultiLine"
 	 	                android:scrollbarStyle="insideInset"
 	 	                android:scrollbars="vertical"
 	 	                android:textColor="@color/gray_color"
 	 	                android:textSize="16sp" >

 	 	                <requestFocus />
 	 	            </EditText>
 	 	        </LinearLayout>

 	 	         <include layout="@layout/line_horizontal_divider" />
<LinearLayout
 	 	            android:layout_width="fill_parent"
 	 	            android:layout_height="wrap_content"
 	 	            android:minHeight="46dp"
 	 	            android:background="@drawable/list_color_item_bg_white"
 	 	            android:gravity="center_vertical" >

 	 	            <TextView
 	 	                android:layout_width="wrap_content"
 	 	                android:layout_height="wrap_content"
 	 	             
 	 	                android:layout_marginLeft="16dp"
 	 	                android:text="附加说明"
 	 	                android:textColor="@color/black_color"
 	 	                android:textSize="16sp" />
			<LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="16dp"
			             android:layout_marginRight="16dp"
			            android:layout_weight="1"
			            android:gravity="center"
			            android:orientation="vertical" >
			
			 		<EditText
 	 	                android:id="@+id/additionalReward"
 	 	                android:layout_width="wrap_content"
 	 	                android:layout_height="wrap_content"
 	 	                android:layout_gravity="right"
 	 	                android:background="@null"
 	 	                android:gravity="left"
 	 	                android:singleLine="false"
 	 	                android:text=""
 	 	                android:hint="提供工具、食宿、报酬等"
 	 	                android:textColor="@color/gray_color"
 	 	                android:textColorHint="@color/gray_color"
 	 	                android:textSize="16sp"
 	 	                android:windowSoftInputMode="stateHidden" />
			
			        </LinearLayout>
 	 	           
 	 	        </LinearLayout>
 	 	        
 <include layout="@layout/line_horizontal_divider" />
<LinearLayout
 	 	            android:layout_width="fill_parent"
 	 	            android:layout_height="wrap_content"
 	 	               android:minHeight="46dp"
 	 	            android:background="@drawable/list_color_item_bg_white"
 	 	            android:gravity="center_vertical" >

 	 	            <TextView
 	 	                android:layout_width="wrap_content"
 	 	                android:layout_height="wrap_content"
 	 	             
 	 	                android:layout_marginLeft="16dp"
 	 	                android:text="时间要求"
 	 	                android:textColor="@color/black_color"
 	 	                android:textSize="16sp" />

 	 	            <EditText
 	 	                android:id="@+id/serviceDate"
 	 	                android:layout_width="0.0dip"
 	 	                android:layout_height="wrap_content"
 	 	                android:layout_marginLeft="16dp"
 	 	                android:layout_marginRight="16dp"
 	 	                android:layout_weight="1.0"
 	 	                android:background="@null"
 	 	                android:focusable="false"
 	 	                android:gravity="right|center_vertical"
 	 	                android:text="不限"
 	 	                android:hint=""
 	 	                android:textColor="@color/gray_color"
 	 	                android:textColorHint="@color/gray_color"
 	 	                android:textSize="16sp"
 	 	                android:windowSoftInputMode="stateHidden" />
 	 	        </LinearLayout>
 	 	        <include layout="@layout/line_horizontal_divider" />
 	 	        <include layout="@layout/line_space" />
 	 	        <include layout="@layout/line_horizontal_divider" />

 	 	        <LinearLayout
 	 	            android:layout_width="fill_parent"
 	 	            android:layout_height="46dp"
 	 	            android:background="@drawable/list_color_item_bg_white"
 	 	            android:gravity="center_vertical" >

 	 	            <TextView
 	 	                android:layout_width="wrap_content"
 	 	                android:layout_height="wrap_content"
 	 	                android:layout_marginLeft="16dp"
 	 	                android:text="委托人数"
 	 	                android:textColor="@color/black_color"
 	 	                android:textSize="16sp" />

 	 	            <RelativeLayout
 	 	                android:layout_width="wrap_content"
 	 	                android:layout_height="match_parent"
 	 	                android:layout_weight="1"
 	 	                android:gravity="right|center"
 	 	                android:orientation="horizontal" >

 					 <EditText
 					     android:id="@+id/num"
 					     android:layout_width="wrap_content"
 					     android:layout_height="28dp"
 					     android:layout_alignParentRight="true"
 					     android:layout_centerVertical="true"
 					     android:layout_marginRight="18dp"
 					     android:background="@drawable/button_white_shape"
 					     android:ems="2"
 					     android:gravity="center"
 					     android:inputType="number"
 					     android:singleLine="true"
 					     android:text="1"
 					     android:textColor="@color/gray_color"
 					     android:textColorHint="@color/gray_color"
 					     android:textSize="16sp"
 					     android:windowSoftInputMode="stateHidden" />

 					 <TextView
 					     android:layout_width="wrap_content"
 					     android:layout_height="wrap_content"
 					     android:layout_alignBaseline="@+id/num"
 					     android:layout_alignBottom="@+id/num"
 					     android:layout_alignParentLeft="true"
 					     android:layout_marginLeft="4dp"
 					     android:text="(0为不限制)"
 					     android:textColor="@color/gray_color"
 					     android:textSize="12sp" />

 	 	            </RelativeLayout>

 	 	        </LinearLayout>

 	 	        <include layout="@layout/line_horizontal_divider" />
<LinearLayout
 	 	            android:layout_width="fill_parent"
 	 	            android:layout_height="46dp"
 	 	            android:background="@drawable/list_color_item_bg_white"
 	 	            android:gravity="center_vertical" >

 	 	            <TextView
 	 	                android:layout_width="wrap_content"
 	 	                android:layout_height="wrap_content"
 	 	                android:layout_marginLeft="16dp"
 	 	                android:text="截止日期"
 	 	                android:textColor="@color/black_color"
 	 	                android:textSize="16sp" />

 	 	            <EditText
 	 	                android:id="@+id/exipireDate"
 	 	                android:layout_width="0.0dip"
 	 	                android:layout_height="wrap_content"
 	 	                android:layout_marginLeft="16dp"
 	 	                android:layout_marginRight="16dp"
 	 	                android:layout_weight="1.0"
 	 	                android:background="@null"
 	 	                android:focusable="false"
 	 	                android:gravity="right|center_vertical"
 	 	                android:singleLine="true"
 	 	                android:text="2014-11-11"
 	 	                android:textColor="@color/gray_color"
 	 	                android:textColorHint="@color/gray_color"
 	 	                android:textSize="16sp"
 	 	                android:windowSoftInputMode="stateHidden" />
 	 	        </LinearLayout>

 	 	        <include layout="@layout/line_horizontal_divider" />
 	 	        <include layout="@layout/line_space" />

 	 	        <include layout="@layout/line_horizontal_divider" />

 	 	        <LinearLayout
 	 	            android:layout_width="match_parent"
 	 	            android:layout_height="wrap_content"
 	 	            android:background="@color/white_color"
 	 	            android:orientation="vertical"
 	 	            android:padding="16dp" >

 	 	            <LinearLayout
 	 	                android:layout_width="match_parent"
 	 	                android:layout_height="wrap_content" >

 	 	                <RelativeLayout
 	 	                    android:layout_width="wrap_content"
 	 	                    android:layout_height="match_parent"
 	 	                    android:layout_weight="1" >

 	 	                    <ImageView
 	 	                        android:id="@+id/upload1"
 	 	                        android:layout_width="62dp"
 	 	                        android:layout_height="62dp"
 	 	                        android:layout_alignParentTop="true"
 	 	                        android:layout_centerHorizontal="true"
 	 	                        android:scaleType="centerCrop"
 	 	                        android:src="@drawable/default_image_add" />
 	 	                </RelativeLayout>

 	 	                <RelativeLayout
 	 	                    android:layout_width="wrap_content"
 	 	                    android:layout_height="match_parent"
 	 	                    android:layout_weight="1" >

 	 	                    <ImageView
 	 	                        android:id="@+id/upload2"
 	 	                        android:layout_width="62dp"
 	 	                        android:layout_height="62dp"
 	 	                        android:layout_alignParentTop="true"
 	 	                        android:layout_centerHorizontal="true"
 	 	                        android:scaleType="centerCrop"
 	 	                        android:src="@drawable/default_image_add" />
 	 	                </RelativeLayout>

 	 	                <RelativeLayout
 	 	                    android:layout_width="wrap_content"
 	 	                    android:layout_height="match_parent"
 	 	                    android:layout_weight="1" >

 	 	                    <ImageView
 	 	                        android:id="@+id/upload3"
 	 	                        android:layout_width="62dp"
 	 	                        android:layout_height="62dp"
 	 	                        android:layout_alignParentTop="true"
 	 	                        android:layout_centerHorizontal="true"
 	 	                        android:scaleType="centerCrop"
 	 	                        android:src="@drawable/default_image_add" />
 	 	                </RelativeLayout>

 	 	                <RelativeLayout
 	 	                    android:layout_width="wrap_content"
 	 	                    android:layout_height="match_parent"
 	 	                    android:layout_weight="1" >

 	 	                    <ImageView
 	 	                        android:id="@+id/upload4"
 	 	                        android:layout_width="62dp"
 	 	                        android:layout_height="62dp"
 	 	                        android:layout_alignParentTop="true"
 	 	                        android:layout_centerHorizontal="true"
 	 	                        android:scaleType="centerCrop"
 	 	                        android:src="@drawable/default_image_add" />
 	 	                </RelativeLayout>
 	 	            </LinearLayout>
 	 	        </LinearLayout>

 	 	        <include layout="@layout/line_horizontal_divider" />

 	 	        <LinearLayout
 	 	            android:layout_width="match_parent"
 	 	            android:layout_height="36dp" >

 	 	            <TextView
 	 	                android:id="@+id/textView"
 	 	                android:layout_width="wrap_content"
 	 	                android:layout_height="wrap_content"
 	 	                android:layout_gravity="center"
 	 	                android:layout_marginLeft="16dp"
 	 	                android:text="联系方式(帮助后可见)" />
 	 	        </LinearLayout>

 	 	        <include layout="@layout/line_horizontal_divider" />

 	 	        <LinearLayout
 	 	            android:layout_width="fill_parent"
 	 	            android:layout_height="46dp"
 	 	            android:background="@drawable/list_color_item_bg_white"
 	 	            android:gravity="center_vertical" >

 	 	            <TextView
 	 	                android:layout_width="wrap_content"
 	 	                android:layout_height="wrap_content"
 	 	                android:layout_marginLeft="16dp"
 	 	                android:text="姓名"
 	 	                android:textColor="@color/black_color"
 	 	                android:textSize="16sp" />

 	 	            <TextView
 	 	                android:id="@+id/nickname"
 	 	                android:layout_width="0.0dip"
 	 	                android:layout_height="wrap_content"
 	 	                android:layout_marginLeft="16dp"
 	 	                android:layout_marginRight="16dp"
 	 	                android:layout_weight="1.0"
 	 	                android:background="@null"
 	 	                android:focusable="false"
 	 	                android:gravity="right|center_vertical"
 	 	                android:singleLine="true"
 	 	                android:hint="请输入姓名"
 	 	                android:textColor="@color/gray_color"
 	 	                android:textColorHint="@color/gray_color"
 	 	                android:textSize="16sp"
 	 	                android:windowSoftInputMode="stateHidden" />
 	 	        </LinearLayout>

 	 	        <include layout="@layout/line_horizontal_divider" />

 	 	        <LinearLayout
 	 	            android:layout_width="fill_parent"
 	 	            android:layout_height="46dp"
 	 	            android:background="@drawable/list_color_item_bg_white"
 	 	            android:gravity="center_vertical" >

 	 	            <TextView
 	 	                android:layout_width="wrap_content"
 	 	                android:layout_height="wrap_content"
 	 	                android:layout_marginLeft="16dp"
 	 	                android:text="手机"
 	 	                android:textColor="@color/black_color"
 	 	                android:textSize="16sp" />

 	 	            <TextView
 	 	                android:id="@+id/phone"
 	 	                android:layout_width="0.0dip"
 	 	                android:layout_height="wrap_content"
 	 	                android:layout_marginLeft="16dp"
 	 	                android:layout_marginRight="16dp"
 	 	                android:layout_weight="1.0"
 	 	                android:background="@null"
 	 	                android:focusable="false"
 	 	                android:gravity="right|center_vertical"
 	 	                android:singleLine="true"
 	 	                android:text=""
 	 	                android:hint="请输入手机"
 	 	                android:textColor="@color/gray_color"
 	 	                android:textColorHint="@color/gray_color"
 	 	                android:textSize="16sp"
 	 	                android:windowSoftInputMode="stateHidden" />

 	 	        </LinearLayout>

 	 	        <include layout="@layout/line_horizontal_divider" />
<TextView
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:layout_below="@+id/login_linearLayout"
        android:background="@drawable/button_orange_shape"
        android:textColor="@color/white_color"
        android:textSize="24sp"
        android:text="立即发布" />
<include layout="@layout/line_space" />
 	 	    </LinearLayout>
 	 	</ScrollView>
</LinearLayout>
