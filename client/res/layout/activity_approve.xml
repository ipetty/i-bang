<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_bg_color"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ApproveActivity" >

 	 	<include
        android:id="@+id/include"
        layout="@layout/action_bar_simple_back" />
    
  <ScrollView
      android:id="@+id/scrollView1"
      android:layout_width="match_parent"
      android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <include layout="@layout/line_space" />
              
 	 	         <include layout="@layout/line_horizontal_divider" />
            <LinearLayout
 	 	            android:layout_width="fill_parent"
 	 	            android:layout_height="wrap_content"
 	 	            android:minHeight="46dp"
 	 	            android:background="@drawable/list_color_item_bg_white"
 	 	            android:gravity="center_vertical" >

 	 	            <TextView
 	 	                android:layout_width="wrap_content"
 	 	                android:layout_height="wrap_content"
 	 	             
 	 	                android:layout_marginLeft="16dp"
 	 	                android:text="真实姓名"
 	 	                android:textColor="@color/black_color"
 	 	                android:textSize="16sp" />
			<LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="16dp"
			             android:layout_marginRight="16dp"
			            android:layout_weight="1"
			            android:gravity="center"
			            android:orientation="vertical" >
			
			 		<EditText
 	 	                android:id="@+id/realname"
 	 	                android:layout_width="wrap_content"
 	 	                android:layout_height="wrap_content"
 	 	                android:layout_gravity="right"
 	 	                android:background="@null"
 	 	                android:gravity="left"
 	 	                android:singleLine="true"
 	 	                android:text=""
 	 	                android:hint="姓名"
 	 	                android:textColor="@color/gray_color"
 	 	                android:textColorHint="@color/gray_color"
 	 	                android:textSize="16sp"
 	 	                android:windowSoftInputMode="stateHidden" />
			
			        </LinearLayout>
 	 	           
 	 	        </LinearLayout>
 	 	          
 	 	         <include layout="@layout/line_horizontal_divider" />
            
            
            <LinearLayout
 	 	            android:layout_width="fill_parent"
 	 	            android:layout_height="wrap_content"
 	 	            android:minHeight="46dp"
 	 	            android:background="@drawable/list_color_item_bg_white"
 	 	            android:gravity="center_vertical" >

 	 	            <TextView
 	 	                android:layout_width="wrap_content"
 	 	                android:layout_height="wrap_content"
 	 	                android:layout_marginLeft="16dp"
 	 	                android:text="身份证号"
 	 	                android:textColor="@color/black_color"
 	 	                android:textSize="16sp" />
			<LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="16dp"
			             android:layout_marginRight="16dp"
			            android:layout_weight="1"
			            android:gravity="center"
			            android:orientation="vertical" >
			
			 		<EditText
 	 	                android:id="@+id/id_number"
 	 	                android:layout_width="wrap_content"
 	 	                android:layout_height="wrap_content"
 	 	                android:layout_gravity="right"
 	 	                android:background="@null"
 	 	                android:gravity="left"
 	 	                android:singleLine="true"
 	 	                android:text=""
 	 	                android:hint="请输入身份证号"
 	 	                android:textColor="@color/gray_color"
 	 	                android:textColorHint="@color/gray_color"
 	 	                android:textSize="16sp"
 	 	                android:inputType="number"
 	 	                android:windowSoftInputMode="stateHidden" />
			
			        </LinearLayout>
 	 	           
 	 	        </LinearLayout>
              
 	 	         <include layout="@layout/line_horizontal_divider" />
 	 	         
 	 	         
            <include layout="@layout/line_space" />
              
 	 	         <include layout="@layout/line_horizontal_divider" />

 	 	         <LinearLayout
 	 	             android:layout_width="match_parent"
 	 	             android:layout_height="wrap_content"
 	 	             android:background="@color/white_color"
 	 	             android:orientation="vertical" >
			
 	 	             	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/list_color_item_bg_white"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手持身份证照片"
            android:textColor="@color/black_color"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:scaleType="fitXY"
                android:src="@drawable/default_image_add" />

        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/line_horizontal_divider" />
 	 	             

 	 	             <LinearLayout
 	 	                 android:layout_width="match_parent"
 	 	                 android:layout_height="wrap_content"
 	 	                 android:gravity="center_vertical"
 	 	                 android:orientation="vertical"
 	 	                 android:paddingLeft="16dp"
 	 	                 android:paddingRight="16dp" >

 	 	                 <TextView
 	 	                     android:layout_width="wrap_content"
 	 	                     android:layout_height="wrap_content"
 	 	                      android:minHeight="46dp"
 	 	                      android:gravity="center"
 	 	                     android:text="照片要求"
 	 	                     android:textColor="@color/black_color"
 	 	                     android:textSize="16sp" />

 	 	                 <TextView
 	 	                     android:id="@+id/textView1"
 	 	                     android:layout_width="wrap_content"
 	 	                     android:layout_height="wrap_content"
 	 	                     android:textColor="@color/gray_color"
 	 	                     android:textSize="12sp"
 	 	                     android:text="1.免冠、未化妆；五官清楚；" />

 	 	                 <TextView
 	 	                     android:id="@+id/textView2"
 	 	                     android:layout_width="wrap_content"
 	 	                     android:layout_height="wrap_content"
 	 	                     android:textColor="@color/gray_color"
 	 	                     android:textSize="12sp"
 	 	                     android:text="2.身份证全部信息清晰无遮挡；" />

 	 	                 <TextView
 	 	                     android:id="@+id/textView3"
 	 	                     android:layout_width="wrap_content"
 	 	                     android:layout_height="wrap_content"
 	 	                    android:textColor="@color/gray_color"
 	 	                     android:textSize="12sp"
 	 	                     android:text="3.完整露出手臂；" />

 	 	                 <TextView
 	 	                     android:id="@+id/textView4"
 	 	                     android:layout_width="wrap_content"
 	 	                     android:layout_height="wrap_content"
 	 	                     android:textColor="@color/gray_color"
 	 	                     android:textSize="12sp"
 	 	                     android:text="4.请勿进行任何软件处理；" />

 	 	                 <TextView
 	 	                     android:id="@+id/textView5"
 	 	                     android:layout_width="wrap_content"
 	 	                     android:layout_height="wrap_content"
 	 	                     android:textColor="@color/gray_color"
 	 	                     android:textSize="12sp"
 	 	                     android:text="5.支持jpg/jpeg/bmp格式" />
 	 	                    
 	 	                 <include layout="@layout/line_space" />

 	 	                 <ImageView
 	 	                     android:id="@+id/imageView1"
 	 	                     android:layout_width="wrap_content"
 	 	                     android:layout_height="wrap_content"
 	 	                     android:layout_gravity="center"
 	 	                     android:src="@drawable/approve_example1" />

 	 	                 <ImageView
 	 	                     android:id="@+id/imageView2"
 	 	                     android:layout_width="wrap_content"
 	 	                     android:layout_height="wrap_content"
 	 	                     android:layout_gravity="center"
 	 	                     android:src="@drawable/approve_example2" />
 	 	                 <include layout="@layout/line_space" />

 	 	             </LinearLayout>
					 
 	 	         </LinearLayout>
					
       <include layout="@layout/line_horizontal_divider" />
         </LinearLayout>
 </ScrollView>
</LinearLayout>
