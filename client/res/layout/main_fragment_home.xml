<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ptr="com.handmark.pulltorefresh.library"
    android:id="@+id/main_fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/action_bar_bg"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp" >
			<Button 
			        android:id="@+id/city"
			       android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@null"
			        android:drawableRight="@drawable/ic_arrow_down"
			        android:paddingLeft="2dp"
			        android:paddingRight="2dp"
			        android:text="苏州"
			         android:textSize="18sp"
			        android:textColor="@color/base_color"/>

			<TextView
			    android:id="@+id/search"
			    android:layout_width="wrap_content"
			    android:layout_weight="1"
			    android:layout_height="32dp"
			    android:layout_gravity="center"
			    android:background="@drawable/button_white_shape"
			    android:gravity="center|left"
			    android:layout_marginLeft="8dp"
			    android:textColor="@color/gray_color"
			    android:paddingLeft="8dp"
			     android:paddingRight="8dp"
			     android:textSize="14sp"
			    android:text="查找需要帮助的信息" />

			<ImageView
			    android:id="@+id/msg"
			    android:layout_width="48dp"
			    android:layout_height="48dp"
			    android:src="@drawable/action_bar_msg" 
			    style="@style/ActionBarButton"/>
          
            </LinearLayout>

            <include layout="@layout/line_horizontal_divider" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_unlogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" >

            <include layout="@layout/common_unlogin" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fragment_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellow_bg_color" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36sp"
                    android:background="@color/category_bg_color" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:drawableRight="@drawable/ic_arrow_down_gray"
                            android:text="全部分类"
                            android:textColor="@color/gray_color"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:drawableRight="@drawable/ic_arrow_down_gray"
                            android:text="最新发布"
                            android:textColor="@color/gray_color"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>
                <include layout="@layout/line_horizontal_divider"/>

                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </ListView>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>
</FrameLayout>
