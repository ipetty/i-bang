<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
   android:background="@color/yellow_bg_color"
    tools:context=".UserInfoActivity" >

      <include layout="@layout/action_bar_simple_back"  />

      <ScrollView
          android:id="@+id/scrollView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/yellow_bg_color" >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              
              android:orientation="vertical" >
              <RelativeLayout
    android:id="@+id/user_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_color_item_bg_white"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="10dp" >

		     <ImageView
			         android:id="@+id/avatar"
			         android:layout_width="52dp"
			         android:layout_height="52dp"
			          android:layout_marginLeft="10dp"
			         android:src="@drawable/default_avatar" />
		     
			
			    
			     <ImageView
			        android:id="@+id/into"
			        android:layout_centerVertical="true"
			        android:layout_width="wrap_content"
			        android:layout_height="32dp"
			         android:layout_marginRight="8dp" 
			        android:layout_alignParentRight="true"
			        android:src="@drawable/ic_forward"
			        android:visibility="invisible" />

			     <RelativeLayout
			         android:layout_width="match_parent"
			         android:layout_height="wrap_content"
			         android:layout_alignParentRight="true"
			         android:layout_alignTop="@+id/avatar"
			         android:layout_marginLeft="8dp"
			         android:layout_toRightOf="@+id/avatar" >

			         <TextView
			             android:id="@+id/nickname"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:layout_alignParentLeft="true"
			             android:layout_alignParentTop="true"
			             android:ellipsize="end"
			             android:gravity="left|top"
			             android:singleLine="true"
			             android:textColor="@color/base_color"
			             android:textSize="16dp" 
			             android:text=""/>
			         
			           <ImageView
			         			             android:id="@+id/approve"
			         			             android:layout_width="wrap_content"
			         			             android:layout_height="20dp"
			         			             android:layout_marginLeft="8dp"
			         			             android:layout_alignParentTop="true"
			         			             android:layout_toRightOf="@+id/nickname"
			         			             android:src="@drawable/ic_approve" 
			         			             android:visibility="gone"/>
<ImageView
    android:id="@+id/more"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="18dp"
    android:layout_alignParentRight="true"
    android:layout_alignTop="@+id/nickname"
    android:src="@drawable/ic_arrow_down_gray" />
			         <LinearLayout
			             android:id="@+id/linearLayout1"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:layout_alignParentLeft="true"
			             android:layout_below="@+id/nickname"
			             android:orientation="vertical" >

			             <LinearLayout
			                 android:layout_width="match_parent"
			                 android:layout_height="wrap_content" >
							<TextView
			                     android:id="@+id/seekerTitle"
			                     android:layout_width="wrap_content"
			                     android:layout_height="wrap_content"
			                     android:layout_marginRight="8dp"
			                     android:text=""
			                     android:textColor="@color/gray_color"
			                     android:textSize="12sp" />

			                 <TextView
			                     android:id="@+id/gender"
			                     android:layout_width="wrap_content"
			                     android:layout_height="wrap_content"
			                     android:layout_marginRight="8dp"
			                     android:textColor="@color/gray_color"
			                     android:textSize="12sp" />

			                 <TextView
			                     android:id="@+id/province"
			                     android:layout_width="wrap_content"
			                     android:layout_height="wrap_content"
			                     android:textColor="@color/gray_color"
			                     android:textSize="12sp"
			                     android:visibility="gone" />

			                 <TextView
			                     android:id="@+id/city"
			                     android:layout_width="wrap_content"
			                     android:layout_height="wrap_content"
			                     android:textColor="@color/gray_color"
			                     android:textSize="12sp" />

			                 <TextView
			                     android:id="@+id/district"
			                     android:layout_width="wrap_content"
			                     android:layout_height="wrap_content"
			                     android:layout_marginRight="8dp"
			                     android:textColor="@color/gray_color"
			                     android:textSize="12sp" />
			             </LinearLayout>

			             <LinearLayout
			                 android:layout_width="match_parent"
			                 android:layout_height="wrap_content" >

			                 <TextView
			                     android:id="@+id/job"
			                     android:layout_width="wrap_content"
			                     android:layout_height="wrap_content"
			                     android:textColor="@color/gray_color"
			                     android:textSize="12sp" />
			             </LinearLayout>
			         </LinearLayout>

			     </RelativeLayout>

	</RelativeLayout>
	
                 <include layout="@layout/line_horizontal_divider" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="42dp" >

                   <LinearLayout
                       android:id="@+id/to_help_tab_layout"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:layout_weight="1"
                       android:background="@drawable/list_color_item_bg_white"
                       android:gravity="center"
                       android:orientation="horizontal" >
 
                       <TextView
                            android:id="@+id/to_help_tab"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/base_color"
                           android:textSize="14dp"
                           android:text="求助 " />

                      
		<TextView
                           android:id="@+id/seekCount"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="16dp"
                           android:visibility="gone"
                           android:text="0" />
                   </LinearLayout>
                   
                   <LinearLayout
                         android:id="@+id/for_help_tab_layout"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:layout_weight="1"
                       android:background="@drawable/list_color_item_bg_white"
                       android:gravity="center"
                       android:orientation="horizontal" >

                       <TextView
                    		android:id="@+id/for_help_tab"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/gray_color"
                           android:textSize="14dp"
                           android:text="帮助 " />
                       
                       
 					<TextView
                           android:id="@+id/offerCount"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="16dp"
                           android:visibility="gone"
                           android:text="0" />
 					 </LinearLayout>

                                          <LinearLayout
                                                android:id="@+id/seekerTotalPoint_tab_layout"
                                              android:layout_width="wrap_content"
                                              android:layout_height="match_parent"
                                              android:layout_gravity="center"
                                              android:layout_weight="1"
                                              android:background="@drawable/list_color_item_bg_white"
                                              android:gravity="center"
                                              android:orientation="horizontal" >

 				
 
                       <TextView
                         android:id="@+id/seekerTotalPoint_tab"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                               android:textColor="@color/gray_color"
                           android:textSize="14dp"
                           android:text="积分 " />
                       
                       	<TextView

                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="16dp"
                           android:visibility="gone"
                           android:text="0" />

                   </LinearLayout>
                   
                    <LinearLayout
                         android:id="@+id/info_tab_layout"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_gravity="center"
                      android:layout_weight="1"
                      android:background="@drawable/list_color_item_bg_white"
                      android:gravity="center"
                      android:orientation="horizontal" >

 				
 
                       <TextView
                        android:id="@+id/info_tab"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                               android:textColor="@color/gray_color"
                           android:textSize="14dp"
                           android:text="特长 " />

                   </LinearLayout>
          </LinearLayout>
          
 				<include layout="@layout/line_horizontal_divider" />

 				<ViewFlipper
 				    android:id="@+id/viewFlipper"
 				    android:layout_width="match_parent"
 				    android:background="@color/yellow_bg_color"
 				    android:layout_height="wrap_content" >
                    
 				    <LinearLayout
			            android:id="@+id/to_help_layout"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			              android:background="@color/white_color"
			            android:padding="8dp"
			            android:orientation="vertical" >
			
			
			        <LinearLayout
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:background="@color/white_color"
			            android:orientation="horizontal" >
			
			            <LinearLayout
			                android:id="@+id/layout1"
			                android:layout_width="fill_parent"
			                android:layout_height="wrap_content"
			                android:layout_weight="1"
			                android:orientation="vertical" >

			            </LinearLayout>
			            <LinearLayout
			                android:id="@+id/layout2"  
			                android:layout_width="fill_parent"
			                android:layout_height="fill_parent"
			                android:layout_weight="1"
			                android:orientation="vertical" >
			            </LinearLayout>
			        </LinearLayout>
			        </LinearLayout>
 				    	<!--  -->
 				    <LinearLayout
			            android:id="@+id/for_help_layout"
			             android:background="@color/white_color"
			            android:padding="8dp"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:orientation="vertical" >
			
			
			        <LinearLayout
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:orientation="horizontal" >
			
			            <LinearLayout
			                android:id="@+id/layout1"  
			                android:layout_width="fill_parent"
			                android:layout_height="fill_parent"
			                android:layout_weight="1"
			                android:orientation="vertical" >
			            </LinearLayout>
			            <LinearLayout
			                android:id="@+id/layout2"  
			                android:layout_width="fill_parent"
			                android:layout_height="fill_parent"
			                android:layout_weight="1"
			                android:orientation="vertical" >
			            </LinearLayout>
			        </LinearLayout>
			        </LinearLayout>
 				    
 				    
					<!--  -->
 					<LinearLayout
 					    android:id="@+id/info_layout"
 					    android:layout_width="match_parent"
 					    android:layout_height="wrap_content"

 					    android:orientation="vertical" >

 					    <include layout="@layout/line_space" />

 					    <include layout="@layout/line_horizontal_divider" />

 					    <LinearLayout
 					        android:id="@+id/phone_layout"
 					        android:layout_width="fill_parent"
 					        android:layout_height="46dp"
 					        android:background="@drawable/list_color_item_bg_white"
 					        android:gravity="center_vertical"
 					        android:paddingLeft="16dp"
 					        android:paddingRight="16dp"
 					        android:visibility="gone" >

 					        <TextView
 					            android:layout_width="wrap_content"
 					            android:layout_height="wrap_content"
 					            android:text="手机"
 					            android:textColor="@color/black_color"
 					            android:textSize="16sp" />

 					        <TextView
 					            android:id="@+id/phone"
 					            android:layout_width="wrap_content"
 					            android:layout_height="fill_parent"
 					            android:layout_gravity="right"
 					            android:layout_weight="1.0"
 					            android:background="@null"
 					            android:ellipsize="marquee"
 					            android:gravity="center_vertical|right"
 					            android:singleLine="true"
 					            android:textColor="@color/gray_color"
 					            android:textSize="14sp" />

 					        <include layout="@layout/line_horizontal_divider" />
 					    </LinearLayout>

 					    <LinearLayout
 					        android:id="@+id/category_layout"
 					        android:layout_width="fill_parent"
 					        android:layout_height="wrap_content"
 					        android:background="@drawable/list_color_item_bg_white"
 					        android:gravity="center_vertical"
 					        android:minHeight="46dp"
 					        android:paddingLeft="16dp"
 					        android:paddingRight="16dp" >

 					        <TextView
 					            android:layout_width="wrap_content"
 					            android:layout_height="wrap_content"
 					            android:text="特长"
 					            android:textColor="@color/black_color"
 					            android:textSize="16sp" />

 					        <LinearLayout
 					            android:layout_width="wrap_content"
 					            android:layout_height="wrap_content"
 					            android:layout_marginLeft="16dp"
 					            android:layout_weight="1"
 					            android:gravity="center"
 					            android:orientation="vertical" >

 					            <TextView
 					                android:id="@+id/category"
 					                android:layout_width="wrap_content"
 					                android:layout_height="wrap_content"
 					                android:layout_gravity="right"
 					                android:background="@null"
 					                android:ellipsize="marquee"
 					                android:gravity="left"
 					                android:paddingBottom="5dp"
 					                android:paddingTop="5dp"
 					                android:textColor="@color/gray_color"
 					                android:textSize="14sp" />
 					        </LinearLayout>
 					    </LinearLayout>

 					    <include layout="@layout/line_horizontal_divider" />

 					    <LinearLayout
 					        android:id="@+id/signature_layout"
 					        android:layout_width="fill_parent"
 					        android:layout_height="wrap_content"
 					        android:background="@drawable/list_color_item_bg_white"
 					        android:gravity="center_vertical"
 					        android:minHeight="46dp"
 					        android:paddingLeft="16dp"
 					        android:paddingRight="16dp" >

 					        <TextView
 					            android:layout_width="wrap_content"
 					            android:layout_height="wrap_content"
 					            android:text="签名"
 					            android:textColor="@color/black_color"
 					            android:textSize="16sp" />

 					        <LinearLayout
 					            android:layout_width="0dp"
 					            android:layout_height="match_parent"
 					            android:layout_marginLeft="16dp"
 					            android:layout_weight="1"
 					            android:gravity="center"
 					            android:orientation="vertical" >

 					            <TextView
 					                android:id="@+id/signature"
 					                android:layout_width="wrap_content"
 					                android:layout_height="wrap_content"
 					                android:layout_gravity="right"
 					                android:background="@null"
 					                android:ellipsize="marquee"
 					                android:gravity="left"
 					                android:paddingBottom="5dp"
 					                android:paddingTop="5dp"
 					                android:textColor="@color/gray_color"
 					                android:textSize="14sp" />
 					        </LinearLayout>
 					    </LinearLayout>

 					    <include layout="@layout/line_horizontal_divider" />
 					</LinearLayout>
 					
 										<!--  -->
 					<LinearLayout
 					    android:id="@+id/seekerTotalPoint_layout"
 					    android:layout_width="match_parent"
 					    android:layout_height="wrap_content"

 					    android:orientation="vertical" >

 					    <include layout="@layout/line_space" />

 					    <include layout="@layout/line_horizontal_divider" />

 					    <LinearLayout
 					        android:layout_width="fill_parent"
 					        android:layout_height="wrap_content"
 					        android:background="@drawable/list_color_item_bg_white"
 					        android:gravity="center_vertical"
 					        android:minHeight="46dp"
 					        android:paddingLeft="16dp"
 					        android:paddingRight="16dp" >

 					        <TextView
 					            android:layout_width="wrap_content"
 					            android:layout_height="wrap_content"
 					            android:text="积分"
 					            android:textColor="@color/black_color"
 					            android:textSize="16sp" />

 					        <LinearLayout
 					            android:layout_width="wrap_content"
 					            android:layout_height="wrap_content"
 					            android:layout_marginLeft="16dp"
 					            android:layout_weight="1"
 					            android:gravity="center"
 					            android:orientation="vertical" >

 					            <TextView
 					                android:id="@+id/seekerTotalPoint"
 					                android:layout_width="wrap_content"
 					                android:layout_height="wrap_content"
 					                android:layout_gravity="right"
 					                android:background="@null"
 					                android:ellipsize="marquee"
 					                android:gravity="left"
 					                android:paddingBottom="5dp"
 					                android:paddingTop="5dp"
 					                android:textColor="@color/gray_color"
 					                android:textSize="14sp" />
 					        </LinearLayout>
 					    </LinearLayout>

 					    <include layout="@layout/line_horizontal_divider" />

 		
 					</LinearLayout>

 				</ViewFlipper>
 				 </LinearLayout>
      </ScrollView>

</LinearLayout>
