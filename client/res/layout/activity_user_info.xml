<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/yellow_bg_color"
    tools:context=".UserInfoActivity" >

      <include layout="@layout/action_bar_simple_back"  />

      <ScrollView
          android:id="@+id/scrollView1"
          android:layout_width="match_parent"
          android:layout_height="match_parent" >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >
              <include layout="@layout/line_space" />
              <include layout="@layout/line_horizontal_divider" />
              <RelativeLayout
    android:id="@+id/user_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_color_item_bg_white"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="10dp" >

		     <ImageView
			         android:id="@+id/avatar"
			         android:layout_width="52dp"
			         android:layout_height="52dp"
			          android:layout_marginLeft="10dp"
			         android:layout_centerVertical="true"
			         android:src="@drawable/default_avatar" />
		     
			
			    
			     <ImageView
			        android:id="@+id/into"
			        android:layout_centerVertical="true"
			        android:layout_width="wrap_content"
			        android:layout_height="32dp"
			         android:layout_marginRight="8dp" 
			        android:layout_alignParentRight="true"
			        android:src="@drawable/ic_forward"
			        android:visibility="invisible" />

			     <RelativeLayout
			         android:layout_width="wrap_content"
			         android:layout_height="52dp"
			         android:layout_marginLeft="8dp"
			         android:layout_alignTop="@+id/avatar"
			         android:layout_toLeftOf="@+id/into"
			         android:layout_toRightOf="@+id/avatar" >

			         <TextView
			             android:id="@+id/nickname"
			             android:layout_width="wrap_content"
			             android:layout_height="28dp"
			             android:layout_alignParentLeft="true"
			             android:layout_centerVertical="true"
			             android:ellipsize="end"
			             android:gravity="left|center"
			             android:singleLine="true"
			             android:textColor="@color/black_color"
			             android:textSize="24dp" />

			     </RelativeLayout>

	</RelativeLayout>
	
                 <include layout="@layout/line_horizontal_divider" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="48dp" >

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_weight="1"
                       android:background="@drawable/list_color_item_bg_white"
                       android:orientation="vertical" >
 					<TextView
                           android:id="@+id/seekCount"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="16dp"
                           android:text="0" />
 
                       <TextView
                        
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/gray_color"
                           android:textSize="14dp"
                           android:text="求助" />

                      

                   </LinearLayout>
                   
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_weight="1"
                       android:background="@drawable/list_color_item_bg_white"
                       android:orientation="vertical" >
 					<TextView
                           android:id="@+id/offerCount"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="16dp"
                           android:text="0" />
                       <TextView
                    
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/gray_color"
                           android:textSize="14dp"
                           android:text="帮助" />
 					 </LinearLayout>
                                          <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_weight="1"
                       android:background="@drawable/list_color_item_bg_white"
                       android:orientation="vertical" >
 					<TextView
                           android:id="@+id/seekerTotalPoint"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="16dp"
                           android:text="0" />
 
                       <TextView
                        
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                               android:textColor="@color/gray_color"
                           android:textSize="14dp"
                           android:text="积分" />

                   </LinearLayout>
          </LinearLayout>
          
 				<include layout="@layout/line_horizontal_divider" />
 				<include layout="@layout/line_space" />
 				<include layout="@layout/line_horizontal_divider" />
 				<LinearLayout
	     android:id="@+id/gender_layout"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
         android:paddingLeft="16dp"
         android:paddingRight="16dp"
         android:background="@drawable/list_color_item_bg_white"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textColor="@color/black_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_weight="1.0"
            android:background="@null"
            android:ellipsize="marquee"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text="男"
            android:textColor="@color/gray_color"
            android:textSize="14sp" />
        
        	
    </LinearLayout>
 		
 				<LinearLayout
     	     android:id="@+id/phone_layout"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
         android:paddingLeft="16dp"
         android:paddingRight="16dp"
        android:background="@drawable/list_color_item_bg_white"
        android:gravity="center_vertical"
          android:visibility="gone"  >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机"
            android:textColor="@color/black_color"
            android:textSize="16sp"
          />

        
       <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_weight="1.0"
            android:background="@null"
            android:ellipsize="marquee"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text="1391344xxxx"
            android:textColor="@color/gray_color"
            android:textSize="14sp" />
        
        	
    </LinearLayout>
     <include layout="@layout/line_horizontal_divider" />
    
     	<LinearLayout
     	      android:id="@+id/city_layout"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
         android:paddingLeft="16dp"
         android:paddingRight="16dp"
        android:background="@drawable/list_color_item_bg_white"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城市"
            android:textColor="@color/black_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_weight="1.0"
            android:background="@null"
            android:ellipsize="marquee"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text="苏州"
            android:textColor="@color/gray_color"
            android:textSize="14sp" />

    </LinearLayout>
     <include layout="@layout/line_horizontal_divider" />
          	<LinearLayout
     	      android:id="@+id/job_layout"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
         android:paddingLeft="16dp"
         android:paddingRight="16dp"
        android:background="@drawable/list_color_item_bg_white"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职位"
            android:textColor="@color/black_color"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@null"
                android:ellipsize="marquee"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/gray_color"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
     <include layout="@layout/line_horizontal_divider" />
 				 	<LinearLayout
 	     android:id="@+id/signature_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="46dp"
         android:paddingLeft="16dp"
         android:paddingRight="16dp"
       android:background="@drawable/list_color_item_bg_white"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签名"
            android:textColor="@color/black_color"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@null"
                android:ellipsize="marquee"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/gray_color"
                android:textSize="14sp" />

        </LinearLayout>
     </LinearLayout>
      <include layout="@layout/line_horizontal_divider" />
 				 </LinearLayout>
      </ScrollView>

</LinearLayout>
